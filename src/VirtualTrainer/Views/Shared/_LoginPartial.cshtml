@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="nav-user">
@if (SignInManager.IsSignedIn(User))
{
    <div class="nav-greet">
        <a  class="nav-link text-dark" asp-controller="ChangePassword" asp-action="Index" title="Manage">Hello @User.Identity?.Name!</a>
    </div>

    <div class="nav-logout">
        <form  class="form-inline" asp-controller="Identity" asp-action="Logout" asp-route-returnUrl="@Url.Action("Logout", "Identity")">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
}
else
{
    <div class="nav-login">
        <a class="nav-link text-dark" asp-area="Identity" asp-action="Login">Login</a>
    </div>
}
</div>
