@model VirtualTrainer.Equipment

@{
    ViewData["Title"] = "Delete";
}

<p style='text-align:center; color:red;'>@ViewData["ErrorMessage"]</p>
<h3 class='delete__title'>Are you sure you want to delete this equipment?</h3>
<div class='delete__container'>
    <ul class='delete__ul'>
        <li class='delete__li'>
            Equipment name: @Html.DisplayFor(model => model.EquipmentName)
        </li>
        <li class='delete__li'>
            @Html.DisplayNameFor(model => model.Stock): @Html.DisplayFor(model => model.Stock) 
        </li>
        <li class='delete__li'>
            @Html.DisplayNameFor(model => model.Details)
        </li>
        <li class='delete__li'>
            @Html.DisplayFor(model => model.Details)
        </li>
    </ul>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idequipment" />
        <input type="submit" value="Delete" class="delete__btn" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
