@model VirtualTrainer.PersonalWorkout

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Personal Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersWorkoutId" />
            <div class="form-group">
                <label asp-for="WorkoutName" class="control-label"></label>
                <input asp-for="WorkoutName" class="form-control" />
                <span asp-validation-for="WorkoutName" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="WorkProgramId" class="control-label">Program Name</label>
                <br />
                @Html.DropDownListFor(it => it.WorkProgramId, (SelectListItem[])ViewBag.WorkPrograms)
                <span asp-validation-for="WorkProgramId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ProgramTypeId" class="control-label">Program Type Name</label>
                <br />
                @Html.DropDownListFor(it => it.ProgramTypeId, (SelectListItem[])ViewBag.ProgramTypes)
                <span asp-validation-for="ProgramTypeId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="BodyGroupId" class="control-label">Body Group Name</label>
                <br />
                @Html.DropDownListFor(it => it.BodyGroupId, (SelectListItem[])ViewBag.BodyGroups)
                <span asp-validation-for="BodyGroupId" class="text-danger" />
            </div>
            Exercises:
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<VirtualTrainer.Models.ViewModels.UserAddsProgram> exercises = ViewBag.Exercises;

                                foreach(var ex in exercises)
                                {
                                    if(cnt++ % 14 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                    <input type="checkbox" name="selectedExercises" value="@ex.ExerciseID" @(Html.Raw(ex.Assigned ? "checked=\"checked\"" : ""))/>
                                            @ex.ExerciseID @: @ex.Name
                                    @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
