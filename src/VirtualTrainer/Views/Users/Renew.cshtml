@model VirtualTrainer.Models.ViewModels.RenewSub

@{
    ViewData["Title"] = "Renew subscription";
}

<h1 class="create__title">Renew subscription</h1>
<h4 class="create__title">Complete data below:</h4>

<div class='create__container'>
    <form asp-action="Renew">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Idsubscription">Subscription name</label>
            @Html.DropDownListFor(it => it.Idsubscription, (SelectListItem[])ViewBag.SubscriptionID)
            <span asp-validation-for="Idsubscription" />
        </div>
        <div>
            <label asp-for="startDate">Start Date</label>
            <input asp-for="startDate" />
            <span asp-validation-for="startDate"></span>
        </div>
        <div>
            <input type="submit" value="Renew" class='create__btn create__customBtn' />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>