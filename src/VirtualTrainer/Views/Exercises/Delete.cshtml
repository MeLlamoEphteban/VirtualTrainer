@model VirtualTrainer.Exercise

@{
    ViewData["Title"] = "Delete";
}

<p style='text-align:center; color:red;'>@ViewData["ErrorMessage"]</p>
<h3 class='delete__title'>Are you sure you want to delete this exercise?</h3>
<div class='delete__container'>
    <ul class='delete__ul'>
        <li class='delete__li'>
            Exercise name: @Html.DisplayFor(model => model.ExerciseName)
        </li>
        <li class='delete__li'>
            Sets: @Html.DisplayFor(model => model.Sets)
        </li>
        <li class='delete__li'>
            Reps: @Html.DisplayFor(model => model.Reps)
        </li>
        <li class='delete__li'>
            Weight: @Html.DisplayFor(model => model.Weight)
        </li>
        <li class='delete__li'>
            Instructions:
        </li>
        <li class='delete__li'>
            @Html.DisplayFor(model => model.Instructions)
        </li>
    </ul>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idexercise" />
        <input type="submit" value="Delete" class="delete__btn" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
