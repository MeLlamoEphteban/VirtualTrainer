@model IEnumerable<VirtualTrainer.Models.GymViewModels.GymGroup>

@{
    ViewData["Title"] = "Subscribed Users";
}

<h2 style='text-align:center; margin:2rem 0'>Number of users registered sorted by date:</h2>

<table class="table__container">
    <thead class='table__head'>
        <tr>
            <th>
                Date
            </th>
            <th>
                Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class='table__row'>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionDate)
                </td>
                <td>
                    @item.UserCount
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<div>
    <a asp-action="About">Back to List</a>
</div>
