@model VirtualTrainer.User[]

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h3>Subscription</h3>
    <h4>The current subscription has @Model.Length users registered:</h4>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Username</th>
                <th>Surname</th>
                <th>Name</th>
            </tr>
            @foreach (var vp in Model)
            {
                <tr>
                    <td>@vp.Username</td>
                    <td>@vp.Surname</td>
                    <td>@vp.Name</td>
                </tr>
            }
        </table>
    </dd>
    <a asp-action="Index">Back to List</a>
</div>
