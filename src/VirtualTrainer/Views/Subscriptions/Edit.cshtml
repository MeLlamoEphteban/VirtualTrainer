@model VirtualTrainer.Subscription

@{
    ViewData["Title"] = "Edit";
}

<h1 class="create__title">Edit selected subscription</h1>

<div class='create__container'>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Idsubscription" />
        <div class='edit__align'>
            <label asp-for="SubName">Subscription Name</label>
            <input asp-for="SubName" class='create__input edit__long__subname' placeholder='Subscription name' />
            <span asp-validation-for="SubName"></span>
        </div>
        <div class='edit__align'>
            <label asp-for="AllowedTimeInterval" class='edit_align_time'>Time Interval</label>
            <input asp-for="AllowedTimeInterval" class='create__input edit__long__subtime' placeholder='Time Interval' />
            <span asp-validation-for="AllowedTimeInterval"></span>
        </div>
        <div class='edit__align'>
            <label asp-for="Price" class='edit__align__price'>Price</label>
            <input asp-for="Price" class='create__input edit__long__subprice' placeholder='Price' />
            <span asp-validation-for="Price"></span>
        </div>
        <div>
            <input type="submit" value="Save" class='create__btn create__customBtn' />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
